    ]]></description>



    <extensions defaultExtensionNs="com.intellij">
        <org.jetbrains.kotlin.supportsKotlinPluginMode>K1_AND_K2</org.jetbrains.kotlin.supportsKotlinPluginMode>

        <intentionAction>
            <language>kotlin</language>
            <className>com.mmb.compose.compose_wrapper.WrapWithComposableIntention</className>
            <category>Compose android</category>
            <skipBeforeAfter>true</skipBeforeAfter>
        </intentionAction>
    </extensions>
</idea-plugin>